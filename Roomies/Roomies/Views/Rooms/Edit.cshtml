@model EFGetStarted.AspNetCore.NewDb.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomID" />
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApartmentID" class="control-label"></label>
                <select asp-for="ApartmentID" class="form-control" asp-items="ViewBag.ApartmentID"></select>
                <span asp-validation-for="ApartmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomTypeID" class="control-label"></label>
                <select asp-for="RoomTypeID" class="form-control" asp-items="ViewBag.RoomTypeID"></select>
                <span asp-validation-for="RoomTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsRepairRequired" /> @Html.DisplayNameFor(model => model.IsRepairRequired)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsBeingRepaired" /> @Html.DisplayNameFor(model => model.IsBeingRepaired)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

